<script>
const btn = document.getElementById('menuBtn');
const menu = document.getElementById('menuPanel');
let open = false;

btn.addEventListener('click', () => {
  if (!open) {
    btn.classList.add('spin-square');
    setTimeout(() => {
      btn.classList.remove('spin-square');
      btn.classList.add('back-arrow');
      menu.classList.add('show');
    }, 2000);
    open = true;
  } else {
    menu.classList.remove('show');
    btn.classList.remove('back-arrow');
    btn.classList.add('spin-square');
    setTimeout(() => {
      btn.classList.remove('spin-square');
    }, 2000);
    open = false;
  }
});
</script>

